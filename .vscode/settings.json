{
  "[css]": {
    "editor.defaultFormatter": "dbaeumer.vscode-eslint",
  },
  "[html]": {
    "editor.defaultFormatter": "dbaeumer.vscode-eslint",
  },
  "[javascript]": {
    "editor.defaultFormatter": "dbaeumer.vscode-eslint",
  },
  "[json]": {
    "editor.defaultFormatter": "dbaeumer.vscode-eslint",
  },
  "[jsonc]": {
    "editor.defaultFormatter": "dbaeumer.vscode-eslint",
  },
  "[typescript]": {
    "editor.defaultFormatter": "dbaeumer.vscode-eslint",
  },
  "[typescriptreact]": {
    "editor.defaultFormatter": "dbaeumer.vscode-eslint",
  },
  "[yaml]": {
    "editor.defaultFormatter": "dbaeumer.vscode-eslint",
  },
  "editor.defaultFormatter": "dbaeumer.vscode-eslint",
  "editor.rulers": [80],
  "editor.tabSize": 2,
  "eslint.enable": true,
  "eslint.format.enable": true,
  "eslint.lintTask.enable": true,
  "eslint.lintTask.options": "--config eslint.config.js .",
  "eslint.probe": [
    "html",
    "javascript",
    "javascriptreact",
    "json",
    "jsonc",
    "markdown",
    "mdx",
    "typescript",
    "typescriptreact",
    "yaml"
  ],
  "eslint.useFlatConfig": true,
  "eslint.validate": [
    "html",
    "javascript",
    "javascriptreact",
    "json",
    "jsonc",
    "markdown",
    "mdx",
    "typescript",
    "typescriptreact",
    "yaml"
  ],
  "files.associations": {
    "**/config/api-extractor.json": "jsonc",
    "**/.aiexclude": "ignore"
  },
  "files.eol": "\n",
  "files.exclude": {
    "**/.eslintcache": true,
    "**/.wrangler/": true,
    "**/node_modules/": true,
    "**/package-lock.json": true,
    "**/vitest.config.ts.timestamp-*-*.mjs": true,
    "dist/": true,
    "packages/": true,
  },
  "files.watcherExclude": {
    "**/.eslintcache": true,
    "**/.wrangler/": true,
    "**/coverage/": true,
    "**/dist/": true,
    "**/node_modules/": true,
    "**/packages/": true,
    "**/sarif/": true,
  },
  "github.copilot.chat.codeGeneration.useInstructionFiles": true,
  "javascript.preferences.importModuleSpecifierEnding": "js",
  "npm.packageManager": "npm",
  "search.exclude": {
    "**/.attach_pid*": true,
    "**/.eslintcache": true,
    "**/.git/": true,
    "**/.idea/": true,
    "**/.nyc_output/": true,
    "**/.wrangler/": true,
    "**/*.cpuprofile": true,
    "**/*.tsbuildinfo": true,
    "**/build/": true,
    "**/coverage/": true,
    "**/dist/": true,
    "**/jest/": true,
    "**/lighthouse.report.*": true,
    "**/node_modules/": true,
    "**/package-lock.json": true,
    "**/sarif/": true,
  },
  "stylelint.configFile": "./packages/vite/.stylelintrc.ts",
  "typescript.enablePromptUseWorkspaceTsdk": true,
  "typescript.preferences.importModuleSpecifierEnding": "js",
  "vitest.maximumConfigs": 99,
  "yaml.keyOrdering": false
}
