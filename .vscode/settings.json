{
  "[css]": {
    "editor.defaultFormatter": "dbaeumer.vscode-eslint"
  },
  "[html]": {
    "editor.defaultFormatter": "dbaeumer.vscode-eslint"
  },
  "[javascript]": {
    "editor.defaultFormatter": "dbaeumer.vscode-eslint"
  },
  "[json]": {
    "editor.defaultFormatter": "dbaeumer.vscode-eslint"
  },
  "[jsonc]": {
    "editor.defaultFormatter": "dbaeumer.vscode-eslint"
  },
  "[typescript]": {
    "editor.defaultFormatter": "dbaeumer.vscode-eslint"
  },
  "[typescriptreact]": {
    "editor.defaultFormatter": "dbaeumer.vscode-eslint"
  },
  "[yaml]": {
    "editor.defaultFormatter": "dbaeumer.vscode-eslint"
  },
  "editor.codeActionsOnSave": {
    "source.fixAll": "never",
    "source.fixAll.ts": "never",
    "source.organizeImports": "never",
    "source.removeUnused.ts": "never",
    "source.sort.json": "never",
    "source.sortImports": "never"
  },
  "editor.defaultFormatter": "dbaeumer.vscode-eslint",
  "editor.rulers": [80],
  "editor.tabSize": 2,
  "eslint.enable": true,
  "eslint.format.enable": true,
  "eslint.lintTask.enable": true,
  "eslint.lintTask.options": "--config eslint.config.js .",
  "eslint.probe": [
    "html",
    "javascript",
    "javascriptreact",
    "json",
    "jsonc",
    "markdown",
    "mdx",
    "typescript",
    "typescriptreact",
    "yaml"
  ],
  "eslint.useFlatConfig": true,
  "eslint.validate": [
    "html",
    "javascript",
    "javascriptreact",
    "json",
    "jsonc",
    "markdown",
    "mdx",
    "typescript",
    "typescriptreact",
    "yaml"
  ],
  "files.associations": {
    "**/.aiexclude": "ignore",
    "**/config/api-extractor.json": "jsonc",
    "**/hintrc.*.json": "jsonc"
  },
  "files.eol": "\n",
  "files.exclude": {
    "packages/": true
  },
  "files.watcherExclude": {
    "**/.cache/": true,
    "**/.git/": true,
    "**/.tests/": true,
    "**/.wrangler/": true,
    "**/_site/": true,
    "**/dist/": true,
    "**/node_modules/": true,
    "packages/": true
  },
  "github.copilot.chat.codeGeneration.useInstructionFiles": true,
  "javascript.preferences.importModuleSpecifier": "project-relative",
  "javascript.preferences.importModuleSpecifierEnding": "js",
  "npm.packageManager": "npm",
  "search.exclude": {
    "**/.attach_pid*": true,
    "**/.cache/": true,
    "**/.git/": true,
    "**/.idea/": true,
    "**/.nyc_output/": true,
    "**/.tests/": true,
    "**/.wrangler/": true,
    "**/_site/": true,
    "**/dist/": true,
    "**/lighthouse.report.*": true,
    "**/node_modules/": true,
    "**/package-lock.json": true
  },
  "stylelint.configFile": "./packages/vite/.stylelintrc.ts",
  "testExplorer.useNativeTesting": true,
  "typescript.enablePromptUseWorkspaceTsdk": true,
  "typescript.preferences.importModuleSpecifier": "project-relative",
  "typescript.preferences.importModuleSpecifierEnding": "js",
  "vitest.maximumConfigs": 99,
  "vitest.shellType": "terminal",
  "yaml.keyOrdering": false
}
