{
  "compilerOptions": {
    "jsx": "react-jsx",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "noEmit": true,
    "rootDir": "src",
    "sourceMap": true,
    "sourceRoot": "https://github.com/quisido/quisi.do/raw/main/packages/game/src/",
    "target": "ES2022"
  },
  "exclude": [
    "./.cache/",
    "./.tests/",
    "./.vitest/",
    "./.vscode/",
    "./coverage/",
    "./src/**/*.test.ts",
    "./src/**/*.test.tsx",
    "./src/*.test.ts",
    "./src/*.test.tsx",
    "./.*.json",
    "./*.config.*",
    "./lighthouse.*",
    "./tsconfig.*"
  ],
  "extends": "./tsconfig.json",
  "include": ["src/**/*.ts", "src/**/*.tsx"]
}
