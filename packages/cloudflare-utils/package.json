{
  "name": "cloudflare-utils",
  "version": "1.0.4",
  "author": "quisi.do <cloudflare-utils@quisi.do>",
  "description": "utilities for Cloudflare workers",
  "homepage": "https://github.com/quisido/quisi.do/tree/main/packages/cloudflare-utils#readme",
  "license": "MIT",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "type": "module",
  "types": "./dist/index.d.ts",
  "scripts": {
    "build": "npm run-script tsc",
    "start": "tsc --project tsconfig.build.json --watch",
    "test": "concurrently --names attw,eslint,publint,vitest --prefix-colors auto \"npm run-script attw\" \"npm run-script eslint\" \"npm run-script publint\" \"npm run-script vitest:run\"",
    "attw": "attw --quiet",
    "clean": "rimraf coverage dist node_modules tsc-output.cpuprofile tsconfig.build.tsbuildinfo",
    "eslint": "eslint . --cache --color --exit-on-fatal-error",
    "eslint:fix": "eslint . --cache --color --exit-on-fatal-error --fix",
    "publint": "publint",
    "tsc": "tsc --project tsconfig.build.json",
    "vitest": "vitest",
    "vitest:run": "vitest run",
    "vitest:watch": "vitest watch"
  },
  "bugs": {
    "email": "cloudflare-utils@quisi.do",
    "url": "https://github.com/quisido/quisi.do/issues"
  },
  "exports": {
    "types": "./dist/index.d.ts",
    "default": "./dist/index.js"
  },
  "funding": {
    "type": "individual",
    "url": "https://github.com/sponsors/quisido"
  },
  "publishConfig": {
    "access": "public",
    "provenance": true
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/quisido/quisi.do.git"
  },
  "dependencies": {
    "@cloudflare/workers-types": "^4.20251014.0",
    "fmrs": "^2.1.1"
  },
  "devDependencies": {
    "@arethetypeswrong/cli": "^0.18.2",
    "@microsoft/eslint-formatter-sarif": "^3.1.0",
    "@quisido/eslint-config": "^1.1.9",
    "@quisido/vitest-config": "^1.0.4",
    "@typescript-eslint/eslint-plugin": "^8.46.3",
    "@typescript-eslint/parser": "^8.46.3",
    "@vitest/coverage-istanbul": "^4.0.7",
    "@vitest/ui": "^4.0.7",
    "concurrently": "^9.2.1",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-prettier": "^5.5.4",
    "prettier": "^3.6.2",
    "publint": "^0.3.15",
    "rimraf": "^6.1.0",
    "tslib": "^2.8.1",
    "typescript": "^5.9.3",
    "vite": "^7.2.1",
    "vitest": "^4.0.7"
  }
}
