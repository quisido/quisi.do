{
  "extends": "../../tsconfig.json",

  "compilerOptions": {
    "allowJs": false,
    "downlevelIteration": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "incremental": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "noEmit": true,
    "resolveJsonModule": true,
    "rootDir": ".",
    "sourceRoot": ".",
    "strict": true,
    "types": ["node"],

    "plugins": [
      {
        "name": "next"
      }
    ]
  },

  "exclude": [
    ".next/",
    "cypress/coverage/",
    "cypress/downloads/",
    "cypress/screenshots/",
    "cypress/videos/",
    "out/",
  ],

  "include": [
    "**/*.json",
    "**/*.ts",
    "**/*.tsx",
    "**/*.webmanifest",
    ".next/types/**/*.ts",
    "next-env.d.ts"
  ]
}
