{
  "exclude": ["src/**/*.test.ts", "src/test/"],
  "extends": "./tsconfig.json",
  "include": ["src/"],
  "compilerOptions": {
    "declarationDir": "dist",
    "noEmit": false,
    "outDir": "dist",
    "rootDir": "src",
    "sourceRoot": "../src/",

    // @types/chai@5.0.1 is incompatible with @vitest/expect@3.0.4.
    "skipLibCheck": true
  }
}
