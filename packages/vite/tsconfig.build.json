{
  "extends": "./tsconfig.json",
  "include": ["src/**/*.ts", "src/**/*.tsx"],

  "exclude": [
    "./.vscode/",
    "./.wrangler/",
    "./analyze/",
    "./certificates/",
    "./coverage/",
    "./cypress/",
    "./out/",
    "./scripts/",
    "./src/**/*.e2e.ts",
    "./src/**/*.test.ts",
    "./src/**/*.test.tsx",
    "./src/*.test.ts",
    "./src/*.test.tsx",
    "./src/test/",
    "./.*.json",
    "./*.config.*",
    "./lighthouse.*",
    "./tsconfig.*"
  ],

  "compilerOptions": {
    "jsx": "preserve",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "noEmit": true,
    "rootDir": "src",
    "sourceMap": true,
    "sourceRoot": "https://github.com/quisido/quisi.do/raw/main/packages/vite/src/",
    "target": "ES5"
  }
}
