{
  "extends": "./tsconfig.json",
  "include": ["src/**/*.ts", "src/**/*.tsx"],
  "exclude": [
    ".vscode/",
    ".wrangler/",
    "_site/",
    "scripts/",
    "src/**/*.e2e.ts",
    "src/**/*.test.ts",
    "src/**/*.test.tsx",
    "src/*.test.ts",
    "src/*.test.tsx",
    "src/test/",
    ".*.json",
    "*.config.*",
    "lighthouse.*",
    "tsconfig.*"
  ],
  "compilerOptions": {
    "composite": false,
    "declarationDir": "_site",
    "incremental": false,
    "jsx": "preserve",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "noEmit": false,
    "outDir": "_site",
    "rootDir": "src",
    "sourceMap": true,
    "sourceRoot": "https://github.com/quisido/quisi.do/raw/main/packages/vite/src/",
    "target": "ES5"
  }
}
